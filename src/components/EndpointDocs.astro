<!-- Endpoint docs -->
<section id="endpoint" class="mx-auto max-w-6xl px-4 sm:px-6 py-14">
  <h2 class="text-2xl font-bold">Endpoint</h2>
  <div class="mt-4 rounded-xl border border-gray-200 bg-white p-4">
    <div class="font-mono text-sm">GET <span class="font-semibold text-brand">/v1/tune</span></div>
    <p class="mt-2 text-gray-600 text-sm">Returns recommended <span class="font-medium">postgresql.conf</span> settings based on the provided server profile.</p>

    <h3 class="mt-6 font-semibold">Query parameters</h3>
    <div class="mt-3 overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-left text-gray-500">
            <th class="py-2 pr-4">Name</th>
            <th class="py-2 pr-4">Type</th>
            <th class="py-2 pr-4">Required</th>
            <th class="py-2">Description</th>
          </tr>
        </thead>
        <tbody class="align-top">
          <tr class="border-t">
            <td class="py-2 pr-4 font-mono">memory_gb</td>
            <td class="py-2 pr-4">number</td>
            <td class="py-2 pr-4">yes</td>
            <td class="py-2">Total RAM in GB (e.g., <span class="kbd">32</span>).</td>
          </tr>
          <tr class="border-t">
            <td class="py-2 pr-4 font-mono">cpus</td>
            <td class="py-2 pr-4">number</td>
            <td class="py-2 pr-4">yes</td>
            <td class="py-2">Logical CPU count (e.g., <span class="kbd">8</span>).</td>
          </tr>
          <tr class="border-t">
            <td class="py-2 pr-4 font-mono">storage_type</td>
            <td class="py-2 pr-4">enum</td>
            <td class="py-2 pr-4">yes</td>
            <td class="py-2"><span class="kbd">hdd</span> | <span class="kbd">ssd</span> | <span class="kbd">nvme</span></td>
          </tr>
          <tr class="border-t">
            <td class="py-2 pr-4 font-mono">workload</td>
            <td class="py-2 pr-4">enum</td>
            <td class="py-2 pr-4">yes</td>
            <td class="py-2"><span class="kbd">oltp</span> | <span class="kbd">olap</span> | <span class="kbd">mixed</span></td>
          </tr>
          <tr class="border-t">
            <td class="py-2 pr-4 font-mono">max_conn</td>
            <td class="py-2 pr-4">number</td>
            <td class="py-2 pr-4">no</td>
            <td class="py-2">Target <span class="font-mono">max_connections</span> (optional; default derived from profile).</td>
          </tr>
          <tr class="border-t">
            <td class="py-2 pr-4 font-mono">version</td>
            <td class="py-2 pr-4">string</td>
            <td class="py-2 pr-4">no</td>
            <td class="py-2">API ruleset version (e.g., <span class="kbd">v1</span>); defaults to latest.</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>
